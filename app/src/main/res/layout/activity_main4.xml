<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F8F9FB"
    android:padding="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/form_border"
        android:paddingBottom="10dp"
        android:paddingHorizontal="0dp">


        <LinearLayout
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginEnd="50dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/digital"
                android:contentDescription="Government Logo"
                android:layout_marginBottom="8dp" />
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/nic"
                android:contentDescription="Government Logo"
                android:layout_marginBottom="8dp" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:elevation="6dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#E3F2FD">

            <LinearLayout
                android:paddingTop="15dp"
                android:paddingHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <Button
                    android:id="@+id/upi"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="UPI"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/rounded_button"
                    android:textSize="18sp"
                    android:layout_marginBottom="20dp" />



                <Button
                    android:id="@+id/b4nking"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Net Banking"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/rounded_button"
                    android:textSize="18sp"
                    android:layout_marginBottom="20dp" />


                <Button
                    android:id="@+id/c4rding"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Card Payment"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/rounded_button"
                    android:textSize="18sp"
                    android:layout_marginBottom="8dp" />

                <!-- Safe Banking Tips Section -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Safe Banking Tips:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginTop="16dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Be cautious of phishing and vishing attempts"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Avoid sharing account-related information"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• For emails and SMS, carefully read the terms and conditions before proceeding"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:layout_marginTop="4dp"/>

            </LinearLayout>


        </androidx.cardview.widget.CardView>


    </LinearLayout>

</ScrollView>
